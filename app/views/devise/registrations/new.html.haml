= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" }) do |f|
  %h2 Sign up
  = devise_error_messages!
  %div
    = f.text_field :email, :class => 'input-block-level', :placeholder => 'Email address'
  %div
    = f.text_field :password, :class => 'input-block-level', :placeholder => 'Password'
  %div
    = f.password_field :password_confirmation, :class => 'input-block-level', :placeholder => 'Password confirmation'
  %div
    = f.submit "Sign up", :class => "btn btn-big btn-primary"
  %div{:style => "padding-top: 20px;"}
    = render "links"