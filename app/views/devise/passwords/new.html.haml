= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post , :class => "form-signin", :id => "form-password"}) do |f|
  %h2 Forgot your password?
  = devise_error_messages!
  %div
    = f.text_field :email, :class => "input-block-level", :placeholder => "Email address"
  %div
    = f.submit "Send me reset password instructions", :class => "btn btn-big btn-primary"
  %div{:style => "padding-top: 20px;"}
    = render "links"