- @posts.each do |post|
  %div.post{:style => "margin-bottom: 20px;"}
    %h1
      %a{:href => posts_path(post)}
        = post.title
    %p.muted
      = post.created_at.to_s
    - c = post.body.match /(.*)<!--more-->(.*)/m
    - if c.nil?
      = raw post.body
    - else
      = raw c[1]
      %a{:href => posts_path(post)}
        Read more!

