= form_for [:admin, @post], :html => { :class => "form-horizontal" } do |f|
  %div#errors
    - @post.errors.full_messages.each do |msg|
      %h3
        = msg
  = field_set_tag "New post" do
    %div.control-group
      = f.label :title, :class => "control-label" #'topic', nil, :class => "control-label"
      %div.controls
        = f.text_field :title
    %div.control-group
      = f.label :friendly_url, :class => "control-label"
      %div.controls
        = f.text_field :friendly_url
    %div.control-group
      = f.label :body, :class => "control-label"
      %div.controls
        = f.text_area :body, :rows => 15, :style => "width: 400px;"
    %div.control-group
      %div.controls
        %label.checkbox
          = f.check_box :show
          Public
        = submit_tag "Save"
